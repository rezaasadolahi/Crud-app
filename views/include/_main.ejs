<main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
            <a href="/add-user" class="border-shadow">
                <span class="text-gradient">New User <i class="fa-solid fa-user"></i></span>
            </a>
        </div>

        <!-- Form handle -->
        <form action="/" method="post">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>@Email</th>
                        <th>Gender</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.map(item=>{ %>
                        <tr>
                            <td>
                                <%= item._id %>
                            </td>
                            <td>
                                <%= item.name %>
                            </td>
                            <td>
                                <%= item.email %>
                            </td>
                            <td>
                                <%= item.gender %>
                            </td>
                            <td>
                                <%= item.status %>
                            </td>
                            <td id="td-delete-update">
                                <a href="/update-user?id=<%= item._id %>" class="btn border-shadow update">
                                    <span class="text-gradient"><i class="fas fa-pencil-alt"></i></span>
                                </a>
                                <form action="/api/users/<%= item._id %>?methodOverride=DELETE" method="post">
                                    <button>
                                        <span class="text-gradient"><i class="fas fa-times"></i></span>
                                    </button>
                                </form>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </form>
        <!-- /Form handle -->
        <!-- <p><%= users %></p> -->
    </div>
</main>